function approx = approxFunction(xEval, xGrid, fGrid)
format longg;
N=size(xGrid,2);
a=xGrid(N);
b=xGrid(1);

coef=ones(1,N);
coef(1)=1/2;
coef(N)=1/2;

f1=@(i,x) cos(i*acos(  (2*x-(b+a))/(b-a)   )  );
f2= @(i,x) cos(i*pi*(2*x-b-a)/((N-1));

alpha=zeros(1,N);

for i=1:N
    alpha(i)=sum(fGrid.*f2(i-1,[0:N-1]));
end
alpha=(2*alpha.*coef)/(N-1);
%disp('alpha');
%disp(alpha);

approx=zeros(1,size(xEval,2));

for i=1:N
    approx=approx+(alpha(i)*f1(i-1,xEval));
end

end